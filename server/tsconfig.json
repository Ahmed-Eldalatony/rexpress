{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "../dist/server",
    "rootDir": ".",
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "skipLibCheck": true
    },
    "include": [
      "**/*.ts"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
